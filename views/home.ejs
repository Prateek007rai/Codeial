<!-- now no need of partials(_header & _footer) in every html file bcz partials used in layout at once ....  -->

<h1> 
    Codeial / <%= title %>
</h1>
<section id="feed-posts">
    <h4>POSTS</h4>

    <form action="/posts/create" id="new-post-form" method="POST">

        <textarea name="content"  cols="30" rows="5" placeholder="Type Here ..."></textarea>
        <input type="submit" value="Post">

    </form>

    <div id="posts-list-container">
        <ul>
            <% for(post of posts){ %>

                <li>
                    <%= post.content %>
                    <small>
                        <%= post.user.name %>
                    </small>
                </li>

            <% } %>

        </ul>
    </div>
</section>
